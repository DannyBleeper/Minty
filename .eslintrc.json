{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["@typescript-eslint"],
    "overrides": [
        {
            "files": ["**/*.ts", "**/*.d.ts"],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "rules": {
                "eol-last": "off",
                "indent": "off"
            }
        }
    ],
    "rules": {
        "quotes": ["error", "double"],
        "no-console": "off",
        "indent": ["error", 4],
        "eol-last": ["error", "never"],
        "no-empty": "off",
        "padded-blocks": "off",
        "no-trailing-spaces": "off",
        "no-multiple-empty-lines": "off",
        "arrow-parens": "off",
        "comma-dangle": "off",
        "no-underscore-dangle": "off",
        "spaced-comment": "off",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-param-reassign": "off",
        "no-unused-vars": "warn",
        "class-methods-use-this": "off"
    }
}
